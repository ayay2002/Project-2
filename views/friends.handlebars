<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Friends</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header text-center">
                <h3>My Friends</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="searchInput">Search for new friends:</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="searchInput" name="searchInput" placeholder="Enter friend's username">
                        <div class="input-group-append">
                            <button class="btn btn-primary" onclick="searchForFriend()">Search</button>
                        </div>
                    </div>
                </div>
                <div id="searchResults"></div>
                <ul class="list-group" id="friendsList">
                    {{#each friends}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{this.first_name}} {{this.Last_name}}
                        <button class="btn btn-danger btn-sm" onclick="deleteFriend('{{this.id}}')">Delete</button>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Include your custom JavaScript -->
    <script src="/friends.js"></script>
</body>

</html>
